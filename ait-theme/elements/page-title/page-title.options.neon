@display:
	label: Display
	type: on-off
	default: on
	help: "Display or hide this element on page"

title:
	label: Title
	type: post-title

description:
	label: Description
	type: textarea
	help: "Description text displayed with page title"

- section(title: 'Custom Styles')

background:
	label: Background
	type: background
	default:
		color: ''
		opacity: 100%
		image: ''
		repeat: no-repeat
		position: center center
		scroll: scroll

textColor:
	label: Text Color
	type: color
	default: ''
